{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "files": {
        "ignoreUnknown": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "semicolons": "asNeeded",
            "trailingComma": "all",
            "quoteProperties": "asNeeded",
            "bracketSpacing": true,
            "quoteStyle": "single"
        }
    }
}
